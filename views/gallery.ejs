<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1>设计展示</h1>
    <p>浏览用户分享的卧室设计作品，获取灵感</p>
  </div>
</section>

<section class="gallery">
  <div class="container">
    <div class="gallery-filters">
      <div class="filter-group">
        <label>风格:</label>
        <select id="style-filter">
          <option value="all">全部</option>
          <option value="modern">现代简约</option>
          <option value="nordic">北欧风格</option>
          <option value="japanese">日式和风</option>
          <option value="american">美式风格</option>
        </select>
      </div>
      <div class="filter-group">
        <label>排序:</label>
        <select id="sort-filter">
          <option value="latest">最新发布</option>
          <option value="popular">最受欢迎</option>
          <option value="comments">评论最多</option>
        </select>
      </div>
      <div class="search-box">
        <input type="text" placeholder="搜索设计..." id="search-input">
        <button type="button" id="search-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
          </svg>
        </button>
      </div>
    </div>

    <div class="gallery-grid">
      <% for (let i = 1; i <= 6; i++) { %>
        <div class="gallery-item">
          <img src="https://source.unsplash.com/random/400x300/?bedroom&<%= i %>" alt="卧室设计">
          <div class="gallery-overlay">
            <h3>精美卧室设计 <%= i %></h3>
            <p>来自 设计师<%= ['小明', '丽丽', '花花', '大壮', '明明', '强强'][i-1] %></p>
            <div class="gallery-stats">
              <span class="likes"><%= Math.floor(Math.random() * 100) + 10 %> 赞</span>
              <span class="comments"><%= Math.floor(Math.random() * 20) + 1 %> 评论</span>
            </div>
            <a href="/gallery/<%= i %>" class="btn btn-sm">查看详情</a>
          </div>
        </div>
      <% } %>
    </div>

    <div class="pagination">
      <a href="#" class="active">1</a>
      <a href="#">2</a>
      <a href="#">3</a>
      <span>...</span>
      <a href="#">10</a>
      <a href="#" class="next">下一页 &raquo;</a>
    </div>
  </div>
</section>

<style>
  .page-header {
    background-color: var(--primary-color);
    color: white;
    padding: 4rem 0 2rem;
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .page-header h1 {
    color: white;
    margin-bottom: 0.5rem;
  }
  
  .page-header p {
    opacity: 0.8;
    font-size: 1.2rem;
    margin-bottom: 0;
  }
  
  .gallery {
    padding: 2rem 0 4rem;
  }
  
  .gallery-filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: var(--card-bg);
    border-radius: 0.5rem;
    box-shadow: var(--shadow-sm);
  }
  
  .filter-group {
    margin-right: 1.5rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
  }
  
  .filter-group label {
    margin-right: 0.5rem;
    font-weight: 500;
  }
  
  .filter-group select {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.25rem;
    background-color: var(--card-bg);
  }
  
  .search-box {
    margin-left: auto;
    display: flex;
    position: relative;
  }
  
  .search-box input {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.25rem 0 0 0.25rem;
    min-width: 200px;
  }
  
  .search-box button {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 0.375rem 0.75rem;
    border-radius: 0 0.25rem 0.25rem 0;
    cursor: pointer;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .gallery-item {
    position: relative;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
  }
  
  .gallery-item:hover {
    transform: translateY(-5px);
  }
  
  .gallery-item img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }
  
  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    padding: 1.5rem;
    color: white;
  }
  
  .gallery-overlay h3 {
    color: white;
    margin-bottom: 0.25rem;
  }
  
  .gallery-overlay p {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-bottom: 0.75rem;
  }
  
  .gallery-stats {
    display: flex;
    margin-bottom: 0.75rem;
  }
  
  .gallery-stats span {
    display: flex;
    align-items: center;
    font-size: 0.75rem;
    margin-right: 1rem;
  }
  
  .gallery-stats span::before {
    content: '';
    display: inline-block;
    width: 0.5rem;
    height: 0.5rem;
    margin-right: 0.25rem;
    border-radius: 50%;
    background-color: white;
  }
  
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .pagination a, 
  .pagination span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 0.75rem;
    margin: 0 0.25rem;
    border-radius: 0.25rem;
    color: var(--text-color);
    text-decoration: none;
  }
  
  .pagination a {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
  }
  
  .pagination a.active {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
  }
  
  .pagination a:hover:not(.active) {
    background-color: var(--background-color);
  }
  
  @media (max-width: 768px) {
    .gallery-filters {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .filter-group {
      margin-right: 0;
      margin-bottom: 1rem;
      width: 100%;
    }
    
    .filter-group select {
      flex: 1;
    }
    
    .search-box {
      margin-left: 0;
      width: 100%;
    }
    
    .search-box input {
      flex: 1;
      min-width: 0;
    }
  }
</style>

<%- include('partials/footer') %> 